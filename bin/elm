#!/bin/bash
. docker-wrapper.sh
docker run \
  --rm \
  -u 1000:1000 \
  -w $(pwd) \
  -e HOME=$HOME -v shared:$HOME \
  $(docker_wrapper_tty) \
  $(docker_wrapper_volumes) \
  -e PATH=$(node bash -c 'echo $PATH'):$APP_ROOT/node_modules/.bin
  "${docker_wrapper_envs[@]}" \
  $(docker_wrapper_image node) \
  elm "${docker_wrapper_args[@]}" \
;
